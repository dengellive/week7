pipeline {
     agent any
     stages {
          stage("Compile") {
               steps {
                    sh "chmod +x gradlew"
                    sh "./gradlew compileJava"
               }
          }
          stage("Unit test") {
               steps {
                    sh "./gradlew test"
               }
          }
          stage("Static code analysis") {
               steps {
                    sh "./gradlew checkstyleMain"
               }
          }
          stage("Package") {
               steps {
                    sh "./gradlew build"
               }
          } 

          stage("Calculator") {
               agent {
                    kubernetes {
                         yaml '''
                         spec:
                           containers:
                           - name: calculator-feature
                             image: dengel223/hello-kaniko:0.1
                             imagePullPolicy: Always
                             ports:
                             - containerPort: 8080
                             ''' 
                    }
               }
               steps {
                    echo "I am Calculator in feature branch"
               }
               
          } 
     }
}
